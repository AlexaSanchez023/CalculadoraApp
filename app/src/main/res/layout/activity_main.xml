<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvNum1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="9dp"
        android:hint="0.0"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNum2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="9dp"
        android:hint="0.0"
        android:textAlignment="viewEnd"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNum1" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="287dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:layout_marginLeft="2dp"
        android:backgroundTint="#F44336"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="borrar"
        android:text="C"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnDiv"
        app:layout_constraintEnd_toStartOf="@+id/btnDiv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#3F51B5" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:layout_marginRight="2dp"
        android:backgroundTint="#F44336"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="clicOperacion"
        android:text="/"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnC"
        app:layout_constraintTop_toBottomOf="@+id/tvNum2" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:layout_marginLeft="2dp"
        android:backgroundTint="#FF5722"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="precionarDigito"
        android:text="7"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:backgroundTint="#FF5722"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="precionarDigito"
        android:text="8"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn9"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:backgroundTint="#FF5722"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="precionarDigito"
        android:text="9"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMulti"
        app:layout_constraintEnd_toStartOf="@+id/btnMulti"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn8" />

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:layout_marginRight="2dp"
        android:backgroundTint="#F44336"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="clicOperacion"
        android:text="x"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnDiv" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:layout_marginLeft="2dp"
        android:backgroundTint="#FF5722"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="precionarDigito"
        android:text="4"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn5"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:backgroundTint="#FF5722"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="precionarDigito"
        android:text="5"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn6"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:backgroundTint="#FF5722"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="precionarDigito"
        android:text="6"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnResta"
        app:layout_constraintEnd_toStartOf="@+id/btnResta"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn5" />

    <Button
        android:id="@+id/btnResta"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="2dp"
        android:backgroundTint="#F44336"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="clicOperacion"
        android:text="-"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btnMulti" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:layout_marginLeft="2dp"
        android:backgroundTint="#FF5722"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="precionarDigito"
        android:text="1"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn2"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:backgroundTint="#FF5722"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="precionarDigito"
        android:text="2"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn3"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:backgroundTint="#FF5722"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="precionarDigito"
        android:text="3"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSuma"
        app:layout_constraintEnd_toStartOf="@+id/btnSuma"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn2" />

    <Button
        android:id="@+id/btnSuma"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:layout_marginRight="2dp"
        android:backgroundTint="#F44336"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="clicOperacion"
        android:text="+"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btnResta" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#F44336"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="resultado"
        android:text="="
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnpunto"
        app:layout_constraintTop_toBottomOf="@+id/btnSuma" />

    <Button
        android:id="@+id/btnpunto"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#FF5722"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="precionarDigito"
        android:text="."
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnIgual"
        app:layout_constraintEnd_toStartOf="@+id/btnIgual"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn0" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="188dp"
        android:layout_height="85dp"
        android:layout_margin="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#FF5722"
        android:marqueeRepeatLimit="marquee_forever"
        android:onClick="precionarDigito"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnpunto"
        app:layout_constraintEnd_toStartOf="@+id/btnpunto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>